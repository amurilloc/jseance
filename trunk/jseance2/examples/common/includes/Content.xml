<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns:JSeance="http://www.codeseance.com/JSeance" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.codeseance.com/JSeance1.0"
         xsi:schemaLocation="http://www.codeseance.com/JSeance1.0 http://jseance.googlecode.com/svn/trunk/jseance/src/main/resources/JSeance1.0.xsd">
    <Template>
        <Text><![CDATA[<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
]]></Text>
        <OutputIterator e4XPath="Posts.Post">
            <Text><![CDATA[		<div class="post">
			<h1 class="title">]]></Text>
            <Text escaping="html">@JavaScript{Models['default'].currentNode.@title}@</Text>
            <Text><![CDATA[</h1>
]]></Text>
            <Text><![CDATA[			<p class="meta"><small>]]></Text>
            <Text escaping="html">@JavaScript{Models['default'].currentNode.@date}@</Text>
            <Text><![CDATA[</small></p>
]]></Text>
            <Text><![CDATA[		  <div class="entry">]]></Text>
            <Text>@JavaScript{Models['default'].currentNode.toString()}@</Text>
            <Text><![CDATA[		  </div>
]]></Text>
        </OutputIterator>

        <Text><![CDATA[	</div>
</div>
	<!-- end content -->
]]></Text>
    </Template>
</Include>